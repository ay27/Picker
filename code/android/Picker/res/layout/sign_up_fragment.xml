<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:editTextForm="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="15dp">
        <com.andreabaccega.widget.FormEditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                                               android:hint="用户名"
                                               android:id="@+id/sign_up_user_name"
                                               android:paddingTop="15dp"
                                               android:lines="1"
                />
        <com.andreabaccega.widget.FormEditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                                               android:inputType="textEmailAddress"
                                               android:hint="邮箱"
                                               android:id="@+id/sign_up_user_email"
                                               android:paddingTop="15dp"
                                               editTextForm:testType="email"
                                               android:lines="1"/>
        <com.andreabaccega.widget.FormEditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                                               android:inputType="textPassword"
                                               android:hint="密码"
                                               android:id="@+id/sign_up_user_password"
                                               android:paddingTop="15dp"
                                               android:lines="1"/>
        <com.andreabaccega.widget.FormEditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                                               android:inputType="textPassword"
                                               android:hint="密码确认"
                                               android:id="@+id/sign_up_user_password_confirm"
                                               android:paddingTop="15dp"
                                               android:lines="1"/>
        <Button android:layout_width="180dp" android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:text="确认"
                android:textSize="20sp"
                android:id="@+id/sign_up_confirm"
                android:textColor="@color/button_text_white"
                android:background="@drawable/green_button_round"/>
    </LinearLayout>
</LinearLayout>