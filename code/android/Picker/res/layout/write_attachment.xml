<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:id="@+id/write_attachment_list"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="添加"
            android:id="@+id/write_attachment_add_btn"
            android:layout_marginTop="24dp"
            android:background="@drawable/bbuton_success_rounded"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="下一步"
            android:layout_marginTop="24dp"
            android:background="@drawable/bbuton_primary_rounded"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/write_attachment_ok"/>
</LinearLayout>
