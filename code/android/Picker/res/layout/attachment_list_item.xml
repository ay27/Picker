<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/list_item_bg"
              android:paddingBottom="4dp">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:id="@+id/attachment_list_item_avatar"
                   android:src="@drawable/user_icon"
                   style="@style/image_style"
                   android:layout_margin="5dp"
                   android:layout_gravity="top"
                />
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textColor="@color/text_black_default_selector"
                      android:textSize="16sp"
                      android:padding="4dp"
                      android:layout_gravity="center"
                      android:id="@+id/attachment_list_item_user_name"/>

            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/attachment_list_item_title"
                      android:padding="8dp"
                      android:textColor="@color/answer_item_text"
                      android:lineSpacingMultiplier="1.2"
                    />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="right"
                  android:id="@+id/attachment_list_item_page_views">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:text="96"
                  android:textSize="12sp"
                  android:textColor="@color/text_gray_default_selector"
                  android:id="@+id/attachment_list_item_page"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:text="é¡µ"
                  android:layout_marginRight="8dp"
                  android:textSize="12sp"
                  android:textColor="@color/text_gray_default_selector"/>
    </LinearLayout>

</LinearLayout>