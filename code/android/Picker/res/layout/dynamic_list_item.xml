<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/list_item_bg"
              android:paddingBottom="4dp">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView android:layout_width="24dp" android:layout_height="24dp"
                   android:src="@drawable/user_icon"
                   android:layout_marginLeft="8dp"
                   style="@style/image_style"
                   android:id="@+id/dynamic_list_item_avatar"
                />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:id="@+id/dynamic_list_item_user_name"
                android:textColor="@color/text_black_default_selector"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:lines="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:textColor="@color/text_gray_default_selector"
                android:id="@+id/dynamic_list_item_action"/>
            </LinearLayout>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:textColor="@color/text_darker_gray_default_selector"
            android:id="@+id/dynamic_list_item_content"
            android:layout_margin="8dp"
            />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:textSize="12sp"
              android:textColor="@color/text_gray_default_selector"
              android:layout_margin="8dp"
              android:id="@+id/dynamic_list_item_time"/>

</LinearLayout>