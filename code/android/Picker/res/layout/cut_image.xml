<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/crop_background">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="80dp"
                 android:layout_margin="8dp">
        <ImageView android:layout_width="wrap_content" android:layout_height="80dp"
                   android:id="@+id/layout2_imageAbove"
                   android:scaleType="matrix"
                   android:background="@color/crop_background"
                />
        <ImageView android:layout_width="wrap_content" android:layout_height="80dp"
                   android:src="@drawable/cut_image_zoom_front"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/crop_background"
            android:paddingBottom="16dp"
            >
        <org.bitman.ay27.cutImage.BottomImageView android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:background="@color/crop_background"
                                                  android:id="@+id/layout2_bottomView"
                                                  android:layout_gravity="center_horizontal"
                                                  android:adjustViewBounds="true"
                />
        <org.bitman.ay27.cutImage.ChooseArea android:layout_width="fill_parent"
                                             android:layout_height="fill_parent"
                                             android:id="@+id/layout2_topView"
                                             android:adjustViewBounds="true"

                />

    </FrameLayout>
</LinearLayout>