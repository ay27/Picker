<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:minHeight="56dp"
                android:background="@drawable/list_item_bg"
        >

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textStyle="bold|italic"
              android:text="1.2"
              android:lines="1"
              android:id="@+id/section_item_header"
              android:layout_centerVertical="true"
              android:layout_alignParentStart="true"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:textColor="@color/text_darker_gray_default_selector"
            />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="翻译并执行程序"
              android:ellipsize="middle"
              android:textStyle="bold"
              android:lines="1"
              android:id="@+id/section_item_name"
              android:layout_alignTop="@+id/section_item_header" android:layout_toEndOf="@+id/section_item_header"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:layout_centerVertical="true"
              android:layout_alignBaseline="@id/section_item_header"
              android:textColor="@color/text_black_default_selector"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="19-23"
              android:lines="1"
              android:id="@+id/section_item_page"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:layout_alignTop="@+id/section_item_name" android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:layout_alignBaseline="@id/section_item_header"
              android:textColor="@color/text_darker_gray_default_selector"/>

</RelativeLayout>