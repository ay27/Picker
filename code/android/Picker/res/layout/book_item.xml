<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="113dp"
              android:layout_height="150dp"
        android:background="@drawable/list_item_bg">
    <ImageView android:layout_width="71dp" android:layout_height="100dp"
               android:layout_gravity="center_vertical|center_horizontal"
               android:id="@+id/book_item_imageView"
            android:src="@drawable/book_cover1"
            android:layout_margin="4dp"
            style="@style/image_style"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/dropshadow"/>

    <LinearLayout android:layout_width="100dp" android:layout_height="6dp"
                  android:layout_gravity="center_vertical|center_horizontal"
                  android:background="@drawable/book_item_divider"
            />
    <TextView android:layout_width="100dp" android:layout_height="50dp"
              android:padding="2dp"
              android:id="@+id/book_item_textView"
              android:layout_gravity="center_vertical|center_horizontal"
              android:gravity="center_horizontal"
              android:textColor="@color/book_item_text"
              android:maxLines="2"
              android:ellipsize="end"
            />
</LinearLayout>